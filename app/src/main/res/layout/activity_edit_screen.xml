<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Edit_screen">
    <LinearLayout
        android:id="@+id/topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal"
        android:gravity="end">
        <ImageView
            android:id="@+id/save"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ribbon"
            android:layout_marginEnd="20dp"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/menuBar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/bar"
            android:layout_marginEnd="15dp"
            android:contentDescription="TODO" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topView"
        app:cardCornerRadius="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/titleParent">
        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:inputType="text"
            android:maxLines="1"
            android:background="@color/white"
            android:padding="10dp"
            android:textSize="20sp"
            android:hint="Add Title Here"
            android:autofillHints="title" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/countWord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titleParent"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:padding="10dp"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noteParent"
        android:layout_below="@+id/countWord"
        app:cardCornerRadius="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp">
        <EditText
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="10dp"
            android:lines="30"
            android:textSize="20sp"
            android:gravity="start|top"
            android:background="@drawable/note_background"
            android:hint="Enter notes" />
    </androidx.cardview.widget.CardView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noteParent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/colorParentLayout"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:id="@+id/yellow"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#CDDC39"
                android:layout_marginEnd="7dp"
                app:cardCornerRadius="15dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/orange"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#F44336"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="15dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/pink"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#DA0347"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="15dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/purple"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="@color/purple_200"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="15dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/red"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#FF0000"
                android:layout_marginEnd="5dp"
                app:cardCornerRadius="15dp"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/green"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#43DA03"
                app:cardCornerRadius="15dp"/>
        </LinearLayout>
    </HorizontalScrollView>
</RelativeLayout>